---
export const prerender = false; // Ensure this page is server-rendered

import Layout from '@layouts/Default.astro';
import LocationAdmin from '@components/admin/LocationAdmin.astro';

// You can add authentication checks here, e.g.:
// if (!Astro.locals.user?.isAdmin) {
//   return Astro.redirect('/login');
// }

// Or check for a simple password in development:
const adminPassword = import.meta.env.ADMIN_PASSWORD;
const providedPassword = Astro.url.searchParams.get('password');

if (adminPassword && providedPassword !== adminPassword) {
	return new Response('Unauthorized', { status: 401 });
}
---

<Layout
	title='Admin - Location Management'
	description='Secure admin interface for updating current location'
>
	<main class='min-h-screen bg-gray-50 py-12 px-4'>
		<div class='max-w-2xl mx-auto'>
			<div class='text-center mb-8'>
				<h1 class='text-3xl font-bold text-gray-900'>Location Management</h1>
				<p class='mt-2 text-gray-600'>
					Update your current location to display on the homepage
				</p>
			</div>

			<LocationAdmin />

			<div class='mt-8 text-center'>
				<a
					href='/'
					class='inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500'
				>
					‚Üê Back to Homepage
				</a>
			</div>
		</div>
	</main>
</Layout>
