  />
  <link
    rel="icon"
    type="image/png"
    sizes="192x192"
    href="/icons/android-icon-192x192.png"
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href="/icons/favicon-32x32.png"
  />
