---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const { ...props } = Astro.props;
---

<a
	{...props}
	class={`${Astro.props.class} border-b dark:border-gray-500 dark:hover:border-gray-100 p-0.5 hover:border-black ease-in-out transition-colors duration-500`}
	><slot /></a
>
