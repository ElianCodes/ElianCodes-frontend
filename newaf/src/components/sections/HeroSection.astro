---
import heroImg from '../../assets/img/hero.png';
const githubUsername = 'ElianVanCutsem'
const twitterUsername = 'HTMELian'
const linkedInUsername = 'elianvancutsem'

import twitterIcon from '../../assets/img/icons/twitter.svg'
import linkedinIcon from '../../assets/img/icons/linkedin.svg'
import githubIcon from '../../assets/img/icons/github.svg'
---
<section class="hero">
    <figure>
        <img src={heroImg} />
        <figcaption>Elian Van Cutsem's online avatar</figcaption>
    </figure>
    <ul>
        <li>
            <a href={`https://www.github.com/${githubUsername}`} target="_blank" title={`${githubUsername} on Github`}>
                <span class="sr-only">Github Icon</span>
                <img src={githubIcon} alt={`${githubUsername} on Github`}/>
            </a>
        </li>
        <li>
            <a href={`https://www.twitter.com/${twitterUsername}`} target="_blank" title={`${twitterUsername} on Twitter`}>
                <span class="sr-only">Twitter Icon</span>
                <img src={twitterIcon} alt={`${twitterUsername} on Twitter`}/>
            </a>
        </li>
        <li>
            <a href={`https://www.linkedin.com/in/${linkedInUsername}`} target="_blank" title={`${linkedInUsername} on Linkedin`}>
                <span class="sr-only">LinkedIn Icon</span>
                <img src={linkedinIcon} alt={`${linkedInUsername} on Linkedin`}/>
            </a>
        </li>
    </ul>
</section>