---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import DefaultHeader from '../components/layout/DefaultHeader.astro';
import DefaultFooter from '../components/layout/DefaultFooter.astro';
import BlogPageContent from '../components/blog/BlogPageContent.astro';

const title = 'Elian Van Cutsem | Blog';
const description = 'Software Engineer @vBridge BV';
const permalink = 'https://www.elian.codes/blog/';
---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
  </head>
  <body>
    <DefaultHeader textMenu={true} logoColor={'text-gray-900'} />
    <main class="blog-index">
      <BlogPageContent>
        <slot />
      </BlogPageContent>
    </main>
    <DefaultFooter />
  </body>
</html>
