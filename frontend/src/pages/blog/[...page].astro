export async function getStaticPaths({ rss }) {
	const allPosts = await Astro.glob('./*.md');
	const sortedPosts = allPosts.sort((a, b) => new Date(b.frontmatter.createdAt) - new Date(a.frontmatter.createdAt));
	rss({
		title: 'Elian Van Cutsem',
		description: 'Programming and Frontend related articles',
		stylesheet: false,
		customData: `<language>en-us</language>`,
		items: sortedPosts.map(post => ({
			title: post.frontmatter.title,
			description: post.frontmatter.longDescription,
			link: `blog/${post.frontmatter.permalink}`,
			pubDate: post.frontmatter.createdAt,
			author: { name: post.frontmatter.author },
			image: post.frontmatter.imgUrl,
			id: post.frontmatter.slug,
		})),
		dest: "/blog.xml",
	});
	return []
}
