---
// Component Imports
import BaseHead from '../components/layout/BaseHead.astro';
import DefaultHeader from '../components/layout/DefaultHeader.vue';
import DefaultFooter from '../components/layout/DefaultFooter.tsx';
import UseHoudini from '../components/layout/UseHoudini.astro';
import Cookies from '../components/layout/Cookies.tsx';

const {title, description, permalink} = Astro.props;
---
<html lang="en" class="bg">
	<head>
		<BaseHead title={title} description={description} permalink={permalink}/>
	</head>
	<body>
		<DefaultHeader textMenu={true} menuColor={'text-white'} client:load/>
		<slot />
		<DefaultFooter client:load/>
		<UseHoudini />
		<Cookies client:load/>
	</body>
</html>
