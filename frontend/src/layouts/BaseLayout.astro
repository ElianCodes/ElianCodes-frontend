---
import BaseHead from './BaseHead.astro'
const { title, description, permalink } = Astro.props
---
<html lang="en" class="h-full">
<head>
    <BaseHead title={title} description={description} permalink={permalink}/>
</head>
<body class="p-8 text-gray-900 min-h-full flex relative">
    <header>  
        <div class="absolute top-8 left-8">
            <h1 class="page-title"><a href="/">Elian Codes</a></h1>
        </div>
        <div class="absolute top-12 right-12 text-3xl">
            <button>🍔</button>
        </div>
    </header>
    <slot />
    <footer class="absolute bottom-8">
        Website built with <a class="text-primary-green" target="_blank" href="https://www.astro.build/">Astro</a> & ☕️
    </footer>
</body>
</html>