---
const { title, description, permalink } = Astro.props;
const DarkMode = Astro.resolve('./DarkMode.js')
import Fonts from './Fonts.astro'
import Meta from './Meta.astro'
import Analytics from './Analytics.astro'
import Icons from './Icons.astro'
---
<!-- DarkMode -->
<script src={DarkMode} type="module" client:load></script>

<!-- Global CSS-->
<link rel="stylesheet" href={Astro.resolve('../../assets/scss/tailwind.css')} client:load>

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<meta name="monetization" content="$ilp.uphold.com/gH9RGFW9ijRA">
<link rel="alternate" href="https://www.elian.codes/blog.xml" type="application/rss+xml">

<Icons />
<Meta title={title} description={description} permalink={permalink} />
<Fonts />
<Analytics />